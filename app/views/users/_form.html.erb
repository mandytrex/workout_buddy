<!-- this form will be used to add a new user and to edit an existing user -->
<%= form_for @user do |f| %>
  <div class="input">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="input">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
 </div>
  
  <div class="input">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
 </div>

  <div class="input">
    <%= f.label :image_url, "Photo URL" %>
    <%= f.text_field :image_url %>
 </div>

 <div class="input">
    <%= f.label :age %>
    <%= f.text_field :age %>
 </div>

 <div class="input">
    <%= f.label :gender, "Gender:" %>
    <%= f.select :gender, options_for_select([["Select One", ""], "male", "female"]) %>
 </div>

<div class="input">
  <%= f.label :experience, "Experience Level:" %>
  <%= f.select :experience, options_for_select([["Select One", ""], "1", "2", "3", "4", "5"]) %>
</div>

<% if new_user %>
  <div class="input">
    <%= f.label :password %>
    <%= f.password_field :password %>
 </div>
  
  <div class="input">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
<% end %>

<% if delete %>
  <div class="input" id="delete">
    <%= link_to "Delete User", user_path(@user), method: :delete %>
  </div>
<% end %>

  <%= f.submit "Submit", :id=>"submit" %>
<% end %>