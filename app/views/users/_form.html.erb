<!-- this form will be used to add a new user and to edit an existing user -->

<section id="signup">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="form-wrap thumbnail">
          <%= bootstrap_form_for(@user) do |f| %>

            <% if new_user %>
            <h1>Sign Up</h1>
            <% end %>
            <% if edit %>
            <h1> Edit Account </h1>
              <%= f.email_field :email, :class => "form-control" %>
              
              <%= f.phone_field :phone, label: 'Phone Number: ', :class => "form-control" %>

            <% end %>

              <%= f.text_field :username, label: 'Pick a Username: ', :class => "form-control" %>


              <%= f.text_field :first_name, label: 'First Name: ', :class => "form-control" %>


              <%= f.text_field :avatar, label: 'Photo URL: ', :class => "form-control" %>

              <%= f.text_field :age, label: 'Age: ', :class => "form-control" %>

              <%= f.select :gender, options_for_select([["Select One", ""], "male", "female"]), label: 'Gender: ', control_col: "col-xs-3" %>

            <%= f.select :experience, options_for_select([["Select One", ""], "1", "2", "3", "4", "5"]), label: 'Experience Level: ', control_col: "col-xs-3" %>

            <%= f.form_group :activity_ids, label: { text: "Select your activities: " } do %>
              <div class="checkboxes">
            <%= f.collection_check_boxes :activity_ids, Activity.all, :id, :name, hide_label: true, inline: true %>
          </div>
            <% end %>
            
            <%= f.form_group :day_ids, label: { text: "Availability:" } do %>
            <div class="checkboxes">
            <%= f.collection_check_boxes :day_ids, Day.all, :id, :day, hide_label: true, inline: true %>
          </div>
            <% end %>

          <% if new_user %>
              <%= f.email_field :email, label: 'Email: ', value: 'name@example.com', :class => "form-control" %>

              <%= f.phone_field :phone, label: 'Phone Number: ', value: '6318350711', :class => "form-control" %>

              <%= f.password_field :password, control_col: "col-xs-3", label: 'Password: ' %>
            
              <%= f.password_field :password_confirmation, label: 'Confirm Password: ', :class => "form-control" %>
          <% end %>

          <%= f.submit "Submit", :id=>"submit", :class => "btn btn-default" %>
            <br> <br>
          <% if delete %>
          <%= link_to "Delete Account", user_path(@user), method: :delete, :class => 'btn btn-default' %>
          <% end %>
          <br>

        <% end %>

        <br>
       </div>
      </div> <!-- /.col-xs-12 -->
    </div> <!-- /.row -->
  </div> <!-- /.container -->
</section>


