	<% if @goal.errors.any? %>
	  <div>
	    <h3 style="color:red">Please fix the appropriate fields:</h3>
	  </div>
	<% end %>

	<!-- shows user edit form -->
	<%= render partial: 'form', locals: { new_user: false, delete: true, edit: true } %>

</div>